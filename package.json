{
  "name": "ts-min-interface",
  "displayName": "ts-min-interface",
  "description": "Allows creation of a minimal interface from a type based on used fields",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:typescript.jsx"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ts-min-interface.createMinInterface",
        "title": "Create Minimal Interface"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ts-min-interface.createMinInterface",
          "when": "editorHasSelection && (resourceLangId == typescript || resourceLangId == typescript.jsx || resourceLangId == typescriptreact)",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out && copyfiles -f \"src/test/testFiles/**/*.ts\" out/test/testFiles",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "gen": "ts-node src/run.ts"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "vsce": "^2.15.0"
  }
}
